%html{lang: "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}/

    / Barber Booking

  %body{role: "document"}
    / Fixed navbar
    .navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => :button}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "#home"} Barber Booking
        .navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li.active
              %a{:href => "#"} Home
            %li
              %a{:href => "abouts"} About
            %li
              %a{:href => "contact"} Contact
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Bookings
                %b.caret
              %ul.dropdown-menu
                %li
                  %a{:href => "reservations"} Book a slot
                %li
                  %a{:href => "reviews"} Reviews

            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Profile
                %b.caret
                %ul.dropdown-menu
                  %li
                    -if user_signed_in?
                      = "#{current_user.email} |"
                      = link_to t('profile'), edit_user_registration_path
                      = '|'
                      = link_to t('logout'), destroy_user_session_path, method: 'delete'
                    -else
                      = link_to t('login'), new_user_session_path
                      = '|'
                      = link_to t('sign_up'), new_user_registration_path

                  - flash.each do |key, value|
                    = content_tag :div, content_tag(:p, value), id: "#{key}" unless value.blank?


        / /.nav-collapse
    .container.theme-showcase{role: "main"}
      / Main jumbotron for a primary marketing message or call to action
      .jumbotron
        %h1 Barber Booking
        %p Booking your haircut today on our new online booking system.
        %p
          %a.btn.btn-primary.btn-lg{:href => "reservations", role: "button"} Book now Â»



      .page-header
        %h1 Weekly Availability
      .progress
        .progress-bar.progress-bar-warning{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "60", role: "progressbar", style: "width: 60%"}
          Monday
          %span.sr-only 60% Complete (warning)
      .progress
        .progress-bar.progress-bar-success{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "40", role: "progressbar", style: "width: 40%"}
          Tuesday
          %span.sr-only 40% Complete (success)
      .progress
        .progress-bar.progress-bar-success{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "20", role: "progressbar", style: "width: 20%"}
          Wedensday
          %span.sr-only 20% Complete(success)
      .progress
        .progress-bar.progress-bar-warning{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "60", role: "progressbar", style: "width: 60%"}
          Thursday
          %span.sr-only 60% Complete (warning)
